# StarTraders Environment Variables
# Copy this to .env and fill in your actual values

# Database Configuration
MONGO_URI=mongodb://localhost:27017/startraders
# or MongoDB Atlas URI: mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/startraders

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Server Configuration
PORT=3000
NODE_ENV=production

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for OTP and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=https://qxtrand.onrender.com

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Security
BCRYPT_ROUNDS=12

# File Upload Limits
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Trading Configuration
TRADING_FEE_PERCENTAGE=0.1
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=50000
